// --- ARDUINO SKETCH ---

void drawIntroImage() {
  // Clear the display buffer
  u8g2.clearBuffer();
  
  // Draw the bitmap: drawBitmap(x, y, byte_count_width, height_in_pixels, buf)
  // X=0, Y=0 (top-left corner)
  // byte_count_width = 128 / 8 = 16
  // height_in_pixels = 64
  u8g2.drawBitmap(0, 0, 16, 64, epd_bitmap_kejulogo);
  
  // Send the buffer to the display
  u8g2.sendBuffer();
}

void setup() {
  Serial.begin(115200);
  
  // Start the U8g2 library and display initialization
  u8g2.begin();
  
  // Display the intro image for 3 seconds
  drawIntroImage();
  Serial.println("Displaying intro image for 3 seconds...");
  delay(3000);
  
  // Clear the screen after the intro
  u8g2.clearBuffer();
  u8g2.sendBuffer();
}

void loop() {
  // U8g2 uses a buffer, so all drawing must be inside a clearBuffer/sendBuffer block
  u8g2.clearBuffer(); // Clear the current buffer
  
  // Example Main Content
  u8g2.setFont(u8g2_font_ncenB14_tr); // Set a medium font
  u8g2.drawStr(0, 15, "DEVICE READY"); // Draw text at (x, y)
  
  // Display based on screen size:
  if (u8g2.getDisplayHeight() >= 64) {
    // This text is only drawn on the 128x64 display
    u8g2.setFont(u8g2_font_ncenR08_tr); 
    u8g2.drawStr(0, 35, "1.3\" OLED Detected"); 
    u8g2.drawStr(0, 50, "System Nominal"); 
  } else {
    // This text is suitable for the 128x32 display
    u8g2.setFont(u8g2_font_ncenR08_tr); 
    u8g2.drawStr(0, 30, "System Nominal"); 
  }
  
  u8g2.sendBuffer(); // Send the content to the screen
  
  delay(500);
}
